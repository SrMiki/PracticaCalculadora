<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">

    <TableRow android:padding="10dp">




    </TableRow>


    <TableRow android:padding="10dp">

        <Button
            android:id="@+id/btn7"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="7"
            />

        <Button
            android:id="@+id/btn8"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="8"
             />

        <Button
            android:id="@+id/btn9"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="9"
            />

        <Button
            android:id="@+id/btnProducto"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="*"
            android:textColor="@color/s_700"
            />

    </TableRow>

    <TableRow android:padding="10dp">

        <Button
            android:id="@+id/btn4"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="6" />

        <Button
            android:id="@+id/btnRestar"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="-"
            android:textColor="@color/s_700"
             />
    </TableRow>

    <TableRow android:padding="10dp">

        <Button
            android:id="@+id/btn1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="3" />

        <Button
            android:id="@+id/btnSumar"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"
            android:text="+"
            android:textColor="@color/s_700"
            />

    </TableRow>

    <TableRow android:padding="10dp">

        <Button
            android:id="@+id/btnNegative"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:text="+/-"
            android:background="@drawable/round_button"
            android:textColor="@color/s_700"

            />

        <Button
            android:id="@+id/btn0"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:text="0"
            android:background="@drawable/round_button"
            />

        <Button
            android:id="@+id/btnDividir"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:text="/"
            android:background="@drawable/round_button"
            android:textColor="@color/s_700"
            />

        <Button
            android:id="@+id/btnResult"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:onClick="onClick"

            android:text="="
            app:backgroundTint="@color/p_700" />


    </TableRow>

</TableLayout>